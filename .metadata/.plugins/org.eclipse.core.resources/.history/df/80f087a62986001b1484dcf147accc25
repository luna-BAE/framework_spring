<script type="text/javascript">

var del = function() {
	alert('삭제하겠습니다');
};

$(function() {
	$('form').one('submit', function() {
		var msg = $('.page-header>h1').html();
		msg=msg.replace('상세','수정');
		$('.page-header>h1').html(msg);
		$('button[type="button"]').off('click',del);
		$('button[type="button"]').attr('type','reset').text("취소").removeClass('btn-danger').addClass('btn-default');
		$('input').filter(':gt(0)').removeProp('readonly');
		return false;
	});
	
	$('button[type="button"]').on('click', del);
	
	var options={show:true};
	$('#myModal').modal(options)

});

</script>

