<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- handlerMapping -->
<bean id = "handlerMapping" class = "org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
	<property name="urlMap">
		<props>
			<prop key="/index.do">index</prop>
			<prop key="/deptlist.do">deptlist</prop>
			<prop key="/adddept.do">adddept</prop>
		</props>
	</property>
</bean>

<!-- controller -->
<bean id = "deptlist" class = "com.bit.dept.controller.ListController">
	<property name="deptDao" ref = "deptDao"></property>
</bean>

<bean id = "adddept" class = "com.bit.dept.controller.AddController">
	<property name="deptDao" ref = "deptDao"></property>
</bean>

<bean id = "index" class = "org.springframework.web.servlet.mvc.ParameterizableViewController">
	<property name="viewName" value = "index"></property>
</bean>

<!-- viewResolver -->
<bean id = "viewResolver" class = "org.springframework.web.servlet.view.InternalResourceViewResolver">
	<property name="prefix" value = "/WEB-INF/views/"></property>
	<property name="suffix" value = ".jsp"></property>
</bean>
</beans>
